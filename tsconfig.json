{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "allowJs": true,           
    "jsx": "react-jsx",        
    "outDir": "./dist",        
    "rootDir": "./src",        
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "declaration": true,       
    "declarationMap": true,    
    "sourceMap": true          
  },
  "include": [
    "src/engine/**/*",    
    "src/types/**/*"           
  ],
  "exclude": [
    "src/components/**/*",  
    "node_modules",
    "dist"
  ]
}